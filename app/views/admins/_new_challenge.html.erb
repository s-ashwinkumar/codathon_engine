<script>
$(document).ready(function(){
  $("#new_challenge").validate({
    rules: {
    "challenge[title]": {required: true},
    "challenge[description]": {required: true},
    }
  });
});
</script>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title" name="myModalLabel">Add New Challenge</h4>
</div>
<div class="modal-body">
  <%= form_for(:challenge, url: create_challenge_path, :html => {:id => "new_challenge"}) do |f| %>
  <div class="carousel-inner">
    <div class="form-group">
      <label class="control-label">Title</label>
      <%= f.text_field :title, class: "form-control input-sm", placeholder: "Title" %>
    </div>
    <div class="form-group">
      <label class="control-label">Description</label>
        <%= f.text_area :description, :rows => 10,class: "form-control input-sm", placeholder: "Description" %>
    </div>
  </div>
    <%= f.hidden_field :owner_id, :value => current_user.id %>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <%= f.submit "Create", class: "btn btn-primary orange-button" %>
    </div>
  <% end %>
</div>
