<div class="container">
  <div class="well title-well">
    Challenge <%= @challenge.id %> , Author : <%= @challenge.owner.full_name %>
  </div>
  <% if flash[:success] %>
    <div class="alert alert-success" role="alert"><%= flash[:success] %></div>
  <%end%>
  <%= form_for(:challenge, url: update_challenge_path, :html => {:id => "new_challenge"}) do |f| %>
  <div class="carousel-inner">
    <div class="form-group">
      <label class="control-label">Title</label>
      <%= f.text_field :title, class: "form-control input-sm", placeholder: "Title" %>
    </div>
    <div class="form-group">
      <label class="control-label">Description</label>
        <%= f.text_area :description, :rows => 10,class: "form-control input-sm", placeholder: "Description" %>
    </div>
  </div>
  <%= hidden_field_tag :id, @challenge.id %>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <%= f.submit "Update", class: "btn btn-primary orange-button" %>
    </div>
  <% end %>
  <div class="well body-well">
    Participants : </br>
    <%= @challenge.subscriber_names.to_sentence %>
  </div>
</div>
